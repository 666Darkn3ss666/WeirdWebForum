<script>

async function signup() {
    const username = document.getElementById("usernameIn").value
    const password = document.getElementById("passwordIn").value
    fetch("/users/signup", {
        method: "post",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify({username: username, password: password})
    })
        .then(res => res.json())
        .then(data => {
            if (data.result == true) {
            alert("User created with ID: " + data.id + "\nYou can now log in")
            location.pathname = "/login"
            } else {
                alert("Username can only contain the characters 0-9, a-z, and A-Z, and cannot be over 15 characters long.\nPassword cannot contain spaces.")
            }})
        
}

</script>
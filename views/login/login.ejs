<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("login.css.ejs"); %>
    
</head>
<body>
    <div class="page">
        <div class="header">
            <h1 class="title">WeirdWebForum - login</h1>
        </div>
        <div class="messageContainer" id="messageContainer">
            <h2 class="loginHead">Log in with your WF account</h2>
            <input id="idIn" class="input" placeholder="ID">
            <input id="passwordIn" class="input" placeholder="Password" type="password">
            <button class="loginBtn" onclick="login()">Log In</button>
            <label class="rememberLbl">Remember account?</label>
            <input class="remember" id="remember" type="checkbox">
            <a class="signup" href="../signup">Don't have an account?</a>
        </div>
        <div class="footer">

        </div>
    </div>
    <%- include("login.js.ejs"); %>
</body>
</html>
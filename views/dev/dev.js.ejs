<script>

const input = document.getElementById("input")

function stop() {
    fetch("/dev/admin", {
        method: "post",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify({pswrd: input.value, action: "stop"})
    })
        .then(res => res.json())
        .then(data => console.log(data))
}

function start() {
    fetch("/dev/admin", {
        method: "post",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify({pswrd: input.value, action: "start"})
    })
        .then(res => res.json())
        .then(data => console.log(data))
}

function newMsg() {
    let msg = prompt("Input announcement")
    fetch("/dev/createAnnouncement", {
        method: "post",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify({pswrd: input.value, msg: msg})
    })
        .then(res => res.json())
        .then(data => console.log(data))
}

</script>